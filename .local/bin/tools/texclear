#!/bin/bash

# Clears the build files of a LaTeX/XeLaTeX build.
# I have vim run this file whenever I exit a .tex file.

case "$1" in
	*.tex)
	file=$(greadlink -f "$1")
	dir=$(dirname "$file")
	base="${file%.*}"
    rm "$base"{.aux,.log,.out,.toc,.fls,.fdb_latexmk,.synctex.gz,.bbl,.bcf,.blg,.run.xml,.lof};;
	*) printf "Give .tex file as argument.\\n" ;;
esac

