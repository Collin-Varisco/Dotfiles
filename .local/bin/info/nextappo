#!/bin/sh

output="$(/usr/local/bin/calcurse -C $HOME/.config/calcurse -D $HOME/.local/share/calcurse -n | /usr/local/opt/gnu-sed/bin/gsed -n 's/^\s\s\s//; s/\[/\[+/; 2p')"
text="Appointment: $output"

if [ "${#text}" -gt 40 ]
then
    echo "$(echo "$text" | cut -c -37)"...
else
    echo "$text"
fi
