#!/bin/sh
export TASKRC="$HOME/.config/task/taskrc"

first=$(/usr/local/bin/task next | sed -n 4p)
if [ ${first:0:2} == " " ]
then
    first=$(echo $first | cut -d " " -f2)
else
    first=$(echo $first | cut -d " " -f1)
fi
name=$(/usr/local/bin/task $first info | sed -n 5p | sed "s/Description   //g")

text="Next Task: "$name
charcount=$(echo $text | wc -m)

if [ $charcount -gt 45 ]
then
	echo $(echo $text | cut -c -42)...
else
	echo $text
fi
