if [ "$(/usr/local/bin/ncmpcpp  --current-song '%t - %a' 2> /dev/null)" == "" ]
then
	echo ♬ No music playing
else
	text=$(/usr/local/bin/ncmpcpp  --current-song '%t - %a' 2> /dev/null)
	charcount=$(echo $text | wc -m)

	if [ $charcount -gt 37 ]
	then
		echo ♬ $(echo $text | cut -c -35)...
	else
		echo ♬ $text
	fi
fi
